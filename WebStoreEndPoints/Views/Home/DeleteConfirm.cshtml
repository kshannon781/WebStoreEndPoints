@model WebStoreEndPoints.Models.StoreItem
@{ Layout = "_Layout"; ViewBag.Title = "Delete Item";}


<h2>Are you sure you want to delete this item?<a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>
<form method="post">
    <div class="form-group">
        <label asp-for="ItemName"></label>
        <input class="form-control" asp-for="ItemName" />
    </div>
    <div class="form-group">
        <label asp-for="Cost"></label>
        <input class="form-control" asp-for="Cost" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Delete</button>
        <button type="submit" class="btn btn-sm btn-primary">Cancel</button>
    </div>
</form>