@model IEnumerable<WebStoreEndPoints.Models.StoreItem>
@{Layout = "_Layout"; ViewBag.Title = "All Store Items";}


<h2>All Store Items</h2>
<a asp-action="AddStoreItem" class="btn btn-sm btn-primary">Add Item</a>

<a asp-action="GetStoreItem" class="btn btn-sm btn-primary">Get Item</a>

<a asp-action="GetMaxPrice" class="btn btn-sm btn-primary">Get Max By Name</a>

<a asp-action="GetMaxPriceGroup" class="btn btn-sm btn-primary">Get Max Groups</a>

<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Cost</th>
            <th colspan="2">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Id.ToString().PadLeft(3,'0')</td>
                <td>@r.ItemName</td>
                <td>@r.Cost</td>
                <td>
                    <a asp-action="UpdateStoreItemPatch" asp-route-id="@r.Id">
                        <b>Update</b>
                    </a>
                </td>
                <td>
                    <form asp-action="DeleteStoreItem" method="post">
                        <input type="hidden" value="@r.Id" name="StoreItemId" />
                        <b>Delete</b>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>