@model WebStoreEndPoints.Models.StoreItem
@{ Layout = "_Layout"; ViewBag.Title = "Add an item";}

<h2>Add an item <a asp-action="Index" class="btn btn-sm btn-primary">Back</a></h2>

<form asp-action="AddStoreItem" method="post">
 
        @Html.TextBoxFor(i => i.ItemName, new { @type = "string", @required = true })
 
        @Html.TextBoxFor(i => i.Cost, new { @type = "number", @required = true })
   
   
        <button type="submit" class="btn btn-sm btn-primary">Add</button>
</form>

@if (Model != null)
{
    <h2>Store Items</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Cost</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Id.ToString().PadLeft(3, '0')</td>
                <td>@Model.ItemName</td>
                <td>@Model.Cost</td>
            </tr>
        </tbody>
    </table>
}